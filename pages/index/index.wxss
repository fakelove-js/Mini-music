/**index.wxss**/
page{
  display: flex;
  flex-direction: column;
  height:auto;
}

.container{
  width: 100%;
  height: inherit;
  position: relative;
}


/* 头部导航 */
.navigator_bar{
  height: 100rpx;
  width:98%;
  display: flex;
  border-radius: 8rpx;
  justify-content:space-around;
  align-items: center;
  background: linear-gradient(to left, #00c9ff, #92fe9d);
  position: sticky;
  top:0rpx;z-index: 100;
}

.navigator_bar text{
  padding:25rpx;
  color:white;
  font-family:'webfont';
  line-height: 100rpx;
  display: inline-block;
}
.bold{
  transform: scale(1.3,1.3);
  font-weight: bolder;
}
.navigator_bar>.icon-sousuo,.icon-cebianlan_tansuo{
  font-size:40rpx;
  position: relative;
}
.curTab{
  transform: scale(1.3,1.3);
  text-shadow:6rpx 6rpx 6rpx black;
}
.swiper2{
  width: 98%;
  margin-top: 8rpx;
  height:1070rpx;
}
.option{
  border-radius:10rpx;
  background: linear-gradient(to left, #00c9ff, #92fe9d);
}

/* 发现 */
#faxian{
  display: flex;
  flex-direction: column;
  width:98%;
  border-radius:10rpx;
  position: relative;
  overflow-y:scroll;
  background: linear-gradient(45deg, #00c9ff, #92fe9d);
}

/* 轮播 */
.lb_tu{
  width:100%;
  margin-top:10rpx;
  text-align: center;
}
.lb_tu .banner{
  height: inherit;
  width:98%;
  border-radius: 8rpx;
  background-size: cover!important;
}



/* 推荐 歌单 排行 电台 */
.second-navigator-bar{
  width:98%;
  height: 180rpx;
  display: flex;
  justify-content: center;
  margin: 2rpx auto;
}
.second-navigator-bar>.bar-box{
  text-align: center;
  font-size:28rpx;
  color: white;
  margin: 0 15rpx;
  font-family:'webfont';
}
.bar-box>text{
  letter-spacing:8rpx;
  display: inline-block;
  margin-top:12rpx;
  transform: translateX(6rpx);
}
.second-navigator-bar .opt{
  text-align: center;
  font-size:45rpx;
  width: 50rpx;
  height:50rpx;
  border-radius: 50%;
  padding: 20rpx;
  background:none;
  margin:0 22rpx;
  position: relative;
  margin-top:22rpx;
}
.second-navigator-bar .opt:hover{
  transform: rotate(360deg);
  transition:all .6s linear;
  background: deepskyblue;
}