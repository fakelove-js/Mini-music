/* component/singer/singerDesc/singerDesc.wxss */
.number{
  display: inline-block;
  font-size: smaller;
  width:30px;
  height: 100%;
  text-align:center;
  color: gray;
  line-height:60px;
}
.hotSong{
  height:60px;
  width: 100%;
  display: flex;
  border-bottom: 1px solid whitesmoke;
}
.songName{
  height: 100%;
  width: 80%;
  display: flex;
  justify-content:center;
  flex-direction: column;
  font-size: smaller;
}
.songName .al{
  font-size:x-small;
  color: gray;
  width:50%;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-wrap: nowrap;
}
.scrollH{
  width: 100%;
  height:400px;
}